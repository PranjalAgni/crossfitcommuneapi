generator client {
  provider = "prisma-client-js"
   moduleFormat = "cjs"
   output = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  member
  admin
}

enum AccountStatus {
  ACTIVE
  INACTIVE
  BANNED
}

enum MembershipStatus {
  ACTIVE
  PAUSED
  EXPIRED
  CANCELLED
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REVOKED
}

enum InviteRole {
  member
  admin
}

model Profile {
  id            String        @id @db.Uuid
  email         String        @unique
  fullName      String?
  phone         String?
  role          Role          @default(member)
  accountStatus AccountStatus @default(ACTIVE)
  firstLoginAt  DateTime?
  lastLoginAt   DateTime?
  onboardingCompletedAt DateTime?
  units         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model MemberInvite {
  email       String       @id
  role        InviteRole   @default(member)
  status      InviteStatus @default(PENDING)

  invitedAt   DateTime     @default(now())
  expiresAt   DateTime?
  acceptedAt  DateTime?

  createdBy   String?      @db.Uuid  // admin who invited (optional)

  @@index([status])
  @@index([expiresAt])
}
